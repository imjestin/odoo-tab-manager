{
  "manifest_version": 3,
  "name": "Odoo Tab Manager",
  "version": "2.1",
  "description": "A powerful tab manager extension for Odoo with personalized new tab, mode switching, and Odoo detection features. Built with TypeScript.",
  "icons": {
    "128": "icons/icon128.png"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "permissions": ["identity", "identity.email", "clipboardWrite", "tabs", "activeTab", "scripting", "storage"],
  "host_permissions": [],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "action": {
    "default_icon": "icons/icon128.png",
    "default_title": "Odoo Tab Manager",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "run_at": "document_end"
    }
  ]
}
